  background:#f5f5f5;
  height:80rpx;
  line-height: 80rpx;
  padding-left: 40rpx;
  font-size:14px;
}
.pnum{
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.noresult{
  position: absolute;
  left: 50%;
  top:50%;
  transform:translate(-50%,-50%);
  font-size:18px;
  color:#999;
  text-align: center
}
.goto-btn{
  margin: 20rpx auto 0 auto;
}
